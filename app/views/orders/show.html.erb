<div class="container mt-5 mb-5">
  <h1 class="font-1-xxl mb-x">My order detail<span class="cor-p1">.</span></h1>
  <div class="details-list">
    <ul>
      <li>Price<span><%= number_to_currency(@order.price / 100.0, unit: "R$ ", delimiter: "") %></span></li>
      <li>Status<span><%= @order.status %></span></li>
      <li>Start Date<span><%= @order.start_date %></span></li>
      <li>End Date<span><%= @order.end_date %></span></li>
      </ul>
      <%= link_to 'Back', url_for(:back), class: 'btn-third mtb-x' %>
    | <%= link_to "Cancel", order_path(@order), data: {turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: 'btn-danger custom-danger' %> |
  </div>

</div>
