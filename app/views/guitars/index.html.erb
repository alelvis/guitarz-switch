<% if user_signed_in? %>
    <%= render "shared/logged_user_banner", user: current_user %>
<% else %>
    <%= render "shared/new_user_banner"%>
<% end %>

<div class="container container-p">

<h2 id="h2" class="font-1-xxl">Choose yours<span class="cor-p1">.</span></h2>


 <div class="row mt-3 mb-3">
  <div class="col-sm-8 my-3">
    <%= form_with url: root_path, method: :get, class: "d-flex gap-3" do %>
      <%= select_tag :rental_city, options_for_select(Guitar.pluck(:rental_city).uniq), prompt: "Select a city", class: "form-control" %>
      <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Type Keyword" %>
      <%= date_field_tag :start_date, params[:start_date],  class: "form-control", placeholder: "Type date" %>
      <%= date_field_tag :end_date, params[:end_date],  class: "form-control", placeholder: "Type date" %>
      <%= submit_tag "Search", name: "", class: "btn btn-secondary" %>
    <% end %>
   </div>
 </div>

  <%= render "shared/guitar_cards", guitars: @guitars %>
</div>
