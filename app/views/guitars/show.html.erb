<div class="container mt-5 mb-5">
  <div class="grid-product">
    <div class="product-media">
      <div class="gallery-image">
     <div class="card-product">
     <% if @guitar.photos.attached? %>
      <% @guitar.photos.each do |photo|%>
        <%= cl_image_tag photo.key, class:"product-image" %>
      <% end %>
      <% else %>
      <%= image_tag "guitar.webp", class: "product-image" %>
      <% end %>
      </div>
    </div>


    <div class="product-info">
      <h1><%= @guitar.name %></h1>
      <span><%= @guitar.model %></span>
      <p><%= @guitar.description %></p>
      <span class="price">  R$ <%= @guitar.price_per_day %></span>
      <a class="btn-rent" href="#">Alugar</a>
      <div class="details">
        <ul>
          <li>Material: <%= @guitar.material %></li>
          <li>Pickup: <%= @guitar.pickup %></li>
          <li>Ano: <%= @guitar.year %></li>
          <li>Pa√≠s: <%= @guitar.country %></li>
          <li>Cidade: <%= @guitar.rental_city %></li>
        </ul>
      </div>
    </div>
  </div>
</div>
  <p><%= @guitar.right_handed %></p>
  <p>
<% if policy(@guitar).edit? %>
  <%= link_to "Edit this Guitar", edit_guitar_path(@guitar) %> |
<% end %>
  </p>

<div class='container'>
  <%= simple_form_for [@guitar, @order] do |f| %>
    <%= f.input :start_date %>
    <%= f.input :end_date %>
    <%= f.submit 'Rent Guitar', class: 'btn btn-primary' %>
  <% end %>
</div>
